<div class="container text-center">
 <form class="bg-light" action="/edit/{{mobile._id}}" method="post">
  <div>
   <h1 class="text text-primary">Edit new mobile</h1>
  </div>
  <div class="form-group mt-3">
   <label class="text text-success">Name</label>
   <input class="form-control" type="text" name="name" required value="{{mobile.name}}">
  </div>
  <div class="form-group mt-3">
   <label class="text text-success">Brand</label>
   <input class="form-control" type="text" name="brand" required value="{{mobile.brand}}">
  </div>
  <div class="form-group mt-3">
   <label class="text text-success">Price</label>
   <input class="form-control" type="text" name="price" required value="{{mobile.price}}">
  </div>
  <div class="form-group mt-3">
   <label class="text text-success">Color</label>
   <input class="form-control" type="text" name="color" required value="{{mobile.color}}">
  </div>
  <div class="form-group mt-3">
   <label class="text text-success">Quantity</label>
   <input class="form-control" type="number" name="quantity" required value="{{mobile.quantity}}">
  </div>
  <div class="form-group mt-3">
   <label class="text text-success">Image</label><br>
   <img src="{{mobile.image}}" alt="" width="300" height="300">
   <input class="form-control" type="text" name="image" required value="{{mobile.image}}">
  </div>
  <div class="form-group mt-3">
   <label class="text text-success">Video</label><br>
   <iframe src="https://www.youtube.com/embed/{{mobile.video}}" frameborder="0"></iframe>
   <input class="form-control" type="text" name="video" required value="{{mobile.video}}">
  </div>
  <div class="form-group mt-3">
   <input class="btn btn-danger" type="submit" value="Edit">
  </div>
 </form>
</div>